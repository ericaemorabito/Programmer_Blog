<!-- Dashboard Page only display posts from the user -->
<div class="container-fluid text-center">
  <div class="row align-items-center">
    <div class="col mt-4">
      <h1>Dashboard</h1>
    </div>
    <div>
      <a href="/new" class="blog-title btn btn-primary p-3">Create New Post</a>
    </div>
  </div>

  <div class="row justify-content-around">
    <!-- Each Review Added -->
    {{#each users as |user|}}
    {{> posts }}
    {{/each}}
  </div>

</div>